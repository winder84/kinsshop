{% extends 'base.html.twig' %}

{% block body %}
	<div class="header">
		<div class="headerMenuBlock">
			<div class="headerMenu">
				<div class="headerLogoBlock">
					<a href="/" class="headerLogo"></a>
					<a href="/" class="headerLogoText">kinsshop.ru</a>
				</div>
				<div class="headerMenuDiv">
					<ul class="dropdown">
						<li class="dropdown-top">
							<a href="/">Главная</a>
						</li>
						<li class="dropdown-top">
							<a class="dropdown-top">Категории</a>
							<ul class="dropdown-inside">
								{% for category in categories %}
									<li><a href="/category/{{ category.alias }}">{{ category.name }}</a></li>
								{% endfor %}
							</ul>
						</li>
						<li class="dropdown-top">
							<a class="dropdown-top">Магазины</a>
							<ul class="dropdown-inside">
								{% for site in sites %}
									<li><a href="/shop/description/{{ site.alias }}">{{ site.title }}</a></li>
								{% endfor %}
							</ul>
						</li>
					</ul>
				</div>
			</div>
		</div>
		<div class="middleBlock">
			<div class="middleBlockText">Всё что Вы искали для Вашего ребёнка!</div>
		</div>
	</div>
	<div class="content">
		{% block content %}

		{% endblock %}
	</div>
	<div class="footerBlock">
		<script>
			(function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
						(i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
					m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
			})(window,document,'script','//www.google-analytics.com/analytics.js','ga');

			ga('create', 'UA-36999000-3', 'auto');
			ga('send', 'pageview');

		</script>
	</div>
{% endblock %}

