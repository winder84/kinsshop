{% extends 'AppBundle:Default:layout.html.twig' %}

{% block content %}
	<div class="productListBlock">
		<h2>Выбор kinsshop.ru:</h2>
		{{ paginator|raw }}
		<ul class="productListUl">
			{% for product in products %}
				<li class="productListItem">
					<div class="itemName">{{ product.name|raw }}</div>
					<div class="itemPicture">
						<noindex>
							<a target="_blank" rel="nofollow" href="{{ product.url|raw }}" title="{{ product.name|raw }} {{ product.model|raw }}"><img src="{{ product.pictures.0 }}"></a>
						</noindex>
					</div>
					<div class="itemModel">{{ product.model|raw }}</div>
					<hr />
					<div class="itemPrice">Цена: {{ product.price|number_format(0, '', ' ') }} руб.</div>
					<div class="itemLink">
						<a href="/product/{{ product.id }}" title="{{ product.name|raw }} {{ product.model|raw }}">Подробнее...</a>
					</div>
				</li>
			{% endfor %}
		</ul>
		{{ paginator|raw }}
	</div>
	<hr/>
	<div class="vendorBlock">
		<h2>Наши бренды:</h2>
		<ul class="vendorBlockUl">
			{% for vendor in vendors %}
				<li>
					<a href="/vendor/{{ vendor.0.alias }}">{{ vendor.0.name }}</a>
					<p>({{ vendor.0.products|length }} шт.)</p>
				</li>
			{% endfor %}
		</ul>
	</div>
	<hr/>
	<div class="siteBlock">
		<h2>Наши партнеры:</h2>
		<ul class="siteBlockUl">
			{% for site in sites %}
				<li>
					<a href="/shop/{{ site.alias }}"><img src="{{ site.logoUrl }}"></a>
				</li>
			{% endfor %}
		</ul>
	</div>
{% endblock %}
