{% extends 'AppBundle:Default:layout.html.twig' %}

{% block content %}
	<div class="shopBlock">
		<div class="vendorBlock">
			<h2 class="categoryH2">Показаны товары следующих категорий:</h2>
			<ul class="vendorBlockUl">
				{% for exCategory in exCategories %}
					<li>
						<a href="/exCategory/{{ exCategory.id }}">{{ exCategory.name }}</a>
						<p>({{ exCategory.products|length }} шт.)</p>
					</li>
				{% endfor %}
			</ul>
		</div>
		<hr/>
		<h2 class="shopTitle">Товары категории {{ category.name|raw }}:</h2>
		{{ paginator|raw }}
		<ul class="productListUl">
			{% for product in products %}
				<li class="productListItem">
					<div class="itemName">{{ product.name|raw }}</div>
					<div class="itemPicture">
						<a href="/product/{{ product.id }}" title="{{ product.name|raw }} {{ product.model|raw }}"><img src="{{ product.pictures.0 }}"></a>
					</div>
					<div class="itemModel">{{ product.model|raw }}</div>
					<div class="itemLink">
						<a href="/product/{{ product.id }}" title="{{ product.name|raw }} {{ product.model|raw }}">Подробнее...</a>
					</div>
				</li>
			{% endfor %}
		</ul>
		{{ paginator|raw }}
	</div>
{% endblock %}